= render :partial => 'shared/form_header', :locals => { :object_name => 'Group' }
.modal-body
  = render :partial => 'shared/form_errors', :locals => { :object => @group }
  = form_for @group, :remote => true, :html => { :class => 'form-horizontal' } do |f|
    .control-group
      = f.label :title, :class => 'control-label'
      .controls
        = f.text_field :title
    .control-group
      = f.label :color_id, :class => 'control-label'
      .controls
        = render :partial => 'shared/color_select', :locals => { :name => :color_id, :color => @group.color, :f => f }
    .control-group
      = f.label :order_rank, :class => 'control-label'
      .controls
        = f.text_field :order_rank
    .control-group
      = f.label :collapsed, "Collapse?", :checked => @group.collapsed?, :class => 'control-label'
      .controls
        = f.check_box :collapsed
    .control-group
      = f.label :private, "Private?", :checked => @group.private?, :class => 'control-label'
      .controls
        = f.check_box :private
    .control-group
      .controls
        = f.submit "#{@verb} Group", :class => 'btn btn-primary'
